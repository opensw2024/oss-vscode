{
	"version": "2.0.0",
	"runner": "terminal",
	"type": "shell",
	"echoCommand": true,
	"presentation": {"reveal": "always"},
	"tasks": [
		// C++ compile
		{
			"label": "save and compile for C++",
			"command": "g++",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}"
			],
			"group": "build",
			"problemMatcher": {
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		// C compile
		{
			"label": "save and compile for C",
			"command": "g++",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}"
			],
			"group": "build",
			"problemMatcher": {
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		// binary execution
		{
			"label": "execute",
			"command": "cmd",
			"group": "test",
			"args": [
				"/C", "${fileDirname}\\${fileBasenameNoExtension}"
			]
		}
	]
}
